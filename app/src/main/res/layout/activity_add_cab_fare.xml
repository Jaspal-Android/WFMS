<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="dateString"
            type="String" />

        <variable
            name="startTimeString"
            type="String" />

        <variable
            name="endTimeString"
            type="String" />

        <variable
            name="locationString"
            type="String" />

        <variable
            name="hasPreviewImage"
            type="Boolean" />

        <variable
            name="vm"
            type="com.atvantiq.wfms.ui.screens.cab.CabViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.screens.attendance.addSignInActivity.AddSignInActivity">

        <include
            android:id="@+id/addSignInToolbar"
            layout="@layout/custom_toolbar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date*"
                    app:endIconDrawable="@drawable/ic_calendar_today"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="date"
                        android:text="@{dateString}"
                        tools:text="12/12/2024" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Circle*"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <AutoCompleteTextView
                        android:id="@+id/circle_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Site*"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <AutoCompleteTextView
                        android:id="@+id/site_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Employee Name*"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <AutoCompleteTextView
                        android:id="@+id/emp_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Cab Type*"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <AutoCompleteTextView
                        android:id="@+id/cab_type_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Location*">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_vist_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@{locationString}"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Start Time*"
                    app:endIconDrawable="@drawable/ic_time_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="time"
                        android:text="@{startTimeString}"
                        tools:text="12:20:05 AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="Start Meter Reading*">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_start_meter_reading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="End Time*"
                    app:endIconDrawable="@drawable/ic_time_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="time"
                        android:text="@{endTimeString}"
                        tools:text="12:20:05 AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="End Meter Reading*">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_end_meter_reading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Photo Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Photo of Reading Meter"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@android:drawable/btn_default"
                    android:contentDescription="Add photo"
                    android:onClick="@{()->vm.onCameraClick()}"
                    android:padding="@dimen/padding"
                    android:src="@drawable/ic_menu_camera" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <RelativeLayout
                        android:id="@+id/imagePreviewView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="@{hasPreviewImage?View.VISIBLE:View.GONE}"
                        app:layout_constraintDimensionRatio="1:1.1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent=".35"
                        tools:visibility="gone">

                        <ImageView
                            android:id="@+id/capturedImagePreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/CustomPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:onClick="@{()->vm.onSaveClick()}"
                    android:text="@string/save" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/CustomRedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:onClick="@{()->vm.onCancelClick()}"
                    android:text="@string/cancel" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>
