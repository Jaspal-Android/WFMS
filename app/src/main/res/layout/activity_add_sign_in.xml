<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="dateString"
            type="String" />

        <variable
            name="timeString"
            type="String" />

        <variable
            name="locationString"
            type="String" />

        <variable
            name="hasPreviewImage"
            type="Boolean" />

        <variable
            name="vm"
            type="com.atvantiq.wfms.ui.screens.attendance.addSignInActivity.AddSignInVM" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".ui.screens.attendance.addSignInActivity.AddSignInActivity">

        <include
            android:id="@+id/addSignInToolbar"
            layout="@layout/custom_toolbar"></include>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_client"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/client_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_project"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/project_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:enabled="@{!vm.isProjectLoading}"
                        />
                    <ProgressBar
                        android:id="@+id/project_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isProjectLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_po_number"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/po_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:enabled="@{!vm.isPoLoading}" />

                    <ProgressBar
                        android:id="@+id/po_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isPoLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_circle"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/circle_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:enabled="@{!vm.isCircleLoading}" />

                    <ProgressBar
                        android:id="@+id/circle_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isCircleLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_site"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/site_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:enabled="@{!vm.isSiteLoading}" />

                    <ProgressBar
                        android:id="@+id/site_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isSiteLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_type"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/type_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:enabled="@{!vm.isTypeLoading}" />

                    <ProgressBar
                        android:id="@+id/type_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isTypeLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:hint="@string/select_activity"
                    app:endIconDrawable="@drawable/ic_arrow_down_24"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/CustomSelectableTextInputEditStyle"
                        android:id="@+id/activities_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:ellipsize="start"
                        android:padding="@dimen/padding"
                        android:scrollHorizontally="true"
                        android:singleLine="false"
                        android:enabled="@{!vm.isActivityLoading}" />

                    <ProgressBar
                        android:id="@+id/activities_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="@{vm.isActivityLoading ? View.VISIBLE : View.GONE}" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="@{()->vm.onSaveClick()}"
                    style="@style/CustomPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/assign_work" />

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="@{()->vm.onCancelClick()}"
                    style="@style/CustomRedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/cancel" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
