<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <data>
            <variable
                name="vm"
                type="com.atvantiq.wfms.ui.screens.forgotPassword.vm.ForgotPasswordVM" />
        </data>
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.features.forgotPassword.ForgotPasswordActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/tv_forgot_password_title"
                style="@style/CustomLargeDarkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/forgotYourPassword"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_forgot_password_description"
                style="@style/CustomRegularTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:gravity="start"
                android:text="@string/enter_email_to_reset_password" />


            <EditText
                android:text="@={vm.emailAddress}"
                android:id="@+id/phoneNumberEt"
                style="@style/CustomEditRegularStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin_large"
                android:hint="@string/enter_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/CustomPrimaryButton"
                android:onClick="@{()->vm.onResetPasswordClick()}"
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_password" />

            <TextView
                android:id="@+id/tv_back_to_login"
                style="@style/CustomMediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:gravity="center"
                android:onClick="@{()->vm.onBackLoginClick()}"
                android:paddingEnd="@dimen/padding"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/back_to_login"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </LinearLayout>
</layout>