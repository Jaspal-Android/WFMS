<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.atvantiq.wfms.ui.screens.forgotPassword.newPassword.vm.CreatePasswordVM" />

        <variable
            name="isToggle"
            type="Boolean" />

        <variable
            name="isConfirmToggle"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.features.forgotPassword.newPassword.NewPasswordActivity">

        <include
            android:id="@+id/newPassToolbar"
            layout="@layout/custom_toolbar" />

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin"
            android:contentDescription="Character Image"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newPassToolbar" />

        <TextView
            android:id="@+id/tvUpdatePassword"
            style="@style/CustomLargePrimaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="Update Your Password"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/characterImage" />

        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/CustomMediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_extra"
            android:text="To continue please enter your new password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUpdatePassword" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin"
            android:background="@drawable/et_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

            <EditText
                android:id="@+id/passwordEt"
                style="@style/EditRegularNoBgStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="@={vm.password}" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/passwordToggleBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->vm.onPasswordToggleClick()}"
                android:src="@{isToggle?@drawable/baseline_visibility_off_24:@drawable/baseline_visibility_24}"
                tools:src="@drawable/baseline_visibility_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/confirmPasswordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:background="@drawable/et_bg"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/passwordView">

            <EditText
                android:id="@+id/confirmPasswordEt"
                style="@style/EditRegularNoBgStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="@={vm.confirmPassword}" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/confirmPasswordToggleBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->vm.onConfirmPasswordToggleClick()}"
                android:src="@{isConfirmToggle?@drawable/baseline_visibility_off_24:@drawable/baseline_visibility_24}"
                tools:src="@drawable/baseline_visibility_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:onClick="@{()->vm.createPasswordRequest()}"
            android:id="@+id/btnContinue"
            style="@style/CustomPrimaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="Continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPasswordView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>