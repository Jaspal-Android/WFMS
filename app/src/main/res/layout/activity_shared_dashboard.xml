<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.atvantiq.wfms.ui.screens.dashboard.DashboardViewModel" />

        <variable
            name="userNameString"
            type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:id="@+id/headerBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginStart="@dimen/margin"
                            android:src="@drawable/ic_logo"></ImageView>

                        <TextView
                            android:id="@+id/dashboardLabel"
                            style="@style/CustomLargeDarkTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Menu"
                            android:text="@string/menu_dashboard"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/btnNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Notifications"
                            android:padding="@dimen/padding"
                            android:src="@drawable/ic_notifications_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/background_light"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="@dimen/elevation_small"
                        app:layout_constraintTop_toBottomOf="@id/headerBar">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:layout_marginVertical="@dimen/margin"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEmpName"
                                style="@style/CustomLargeDarkTextView"
                                wishText="@{userNameString}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="Hello, Jaspal"></TextView>

                            <LinearLayout
                                android:id="@+id/locationMarkerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small_extra"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingVertical="@dimen/padding_x_small"
                                app:layout_constraintTop_toBottomOf="@+id/tvEmpName">

                                <ImageView
                                    android:id="@+id/icLocationPic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_circular_bg"
                                    android:padding="2dp"
                                    android:src="@drawable/rounded_location_on_24"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tvEmpName" />

                                <TextView
                                    android:onClick="@{()->vm.onFetchCurrentLatitudeLongitudeClicks()}"
                                    style="@style/CustomMediumDarkTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:text="@string/get_current_latitude_longitude"
                                    app:layout_constraintBottom_toBottomOf="@+id/tvEmpName"
                                    app:layout_constraintStart_toEndOf="@+id/icLocationPic" />
                            </LinearLayout>


                            <com.ncorti.slidetoact.SlideToActView
                                android:id="@+id/slideStartDay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin"
                                app:animation_duration="250"
                                app:area_margin="5dp"
                                app:border_radius="@dimen/card_radius"
                                app:bounce_on_start="true"
                                app:inner_color="@color/white"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/locationMarkerView"
                                app:outer_color="@color/colorPrimaryDark"
                                app:slider_height="50dp"
                                app:text="@string/start_day"
                                app:text_color="@color/white"
                                app:text_size="@dimen/default_text" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvUserEmail"
                                    style="@style/CustomSmallDarkPrimaryTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/whit_bg"
                                    android:paddingHorizontal="@dimen/padding_medium"
                                    android:paddingVertical="@dimen/padding_x_small"
                                    tools:text="Email@gmil.com"></TextView>

                                <TextView
                                    android:id="@+id/tvUserRole"
                                    style="@style/CustomSmallDarkPrimaryTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:background="@drawable/whit_bg"
                                    android:paddingHorizontal="@dimen/padding_medium"
                                    android:paddingVertical="@dimen/padding_x_small"
                                    tools:text="Circle Head"></TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/constraintLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/navigationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="@{()->vm.onSitesClick()}"
                        app:cardBackgroundColor="@color/cardLightBackground"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/cardLightStroke"
                        app:strokeWidth="@dimen/border_width_1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/card_dashboard_height"
                                android:layout_height="@dimen/card_dashboard_height"
                                android:padding="@dimen/padding"
                                app:cardBackgroundColor="#3B82F6"
                                app:cardCornerRadius="@dimen/card_radius_small"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="Site Icon"
                                    android:src="@drawable/ic_marker_on_24"
                                    app:tint="@android:color/white" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/CustomLargeDarkTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin"
                                android:text="@string/site"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardApproveSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="@{()-> vm.onSitesApprovalsClick()}"
                        app:cardBackgroundColor="@color/cardLightBackground"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/cardLightStroke"
                        app:strokeWidth="@dimen/border_width_1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/card_dashboard_height"
                                android:layout_height="@dimen/card_dashboard_height"
                                app:cardBackgroundColor="#22C55E"
                                app:cardCornerRadius="@dimen/card_radius_small"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="Approve Site Icon"
                                    android:src="@drawable/ic_check_circle_24"
                                    app:tint="@android:color/white" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/CustomLargeDarkTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin"
                                android:text="@string/approve_site"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardApproveClaims"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/cardLightBackground"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/cardLightStroke"
                        app:strokeWidth="@dimen/border_width_1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/card_dashboard_height"
                                android:layout_height="@dimen/card_dashboard_height"
                                app:cardBackgroundColor="#A855F7"
                                app:cardCornerRadius="@dimen/card_radius_small"
                                app:cardElevation="@dimen/elevation_small">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="Approve Claims Icon"
                                    android:src="@drawable/ic_approve_claim_24"
                                    app:tint="@android:color/white" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                style="@style/CustomLargeDarkTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin"
                                android:text="@string/approve_claims"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_large"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{()->vm.onLogoutClick()}"
                    app:cardBackgroundColor="@color/red_light"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/navigationContainer"
                    app:strokeColor="@color/red_pastel"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="Logout Icon"
                            android:src="@drawable/ic_logout_24"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/CustomLargeDarkTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin"
                            android:text="Logout"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


