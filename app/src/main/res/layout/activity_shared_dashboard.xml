<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.atvantiq.wfms.ui.screens.admin.SharedDashboardVM" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/headerBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_marginStart="@dimen/margin"
                    android:src="@drawable/ic_logo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"></ImageView>

                <TextView
                    android:layout_marginStart="@dimen/margin_small"
                    android:id="@+id/dashboardLabel"
                    style="@style/CustomLargeDarkTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:text="@string/menu_dashboard"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notifications"
                    android:padding="@dimen/padding"
                    android:src="@drawable/ic_notifications_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/margin"
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/headerBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcomeLabel"
                        style="@style/CustomMediumLightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back,"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/headerBar" />

                    <TextView
                        android:id="@+id/tvUserName"
                        style="@style/CustomBigLightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWelcomeLabel" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingVertical="@dimen/padding_x_small"
                            android:paddingHorizontal="@dimen/padding_medium"
                            android:background="@drawable/whit_bg"
                            tools:text="Email@gmil.com"
                            android:id="@+id/tvUserEmail"
                            style="@style/CustomSmallDarkPrimaryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TextView>

                        <TextView
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/whit_bg"
                            android:paddingVertical="@dimen/padding_x_small"
                            android:paddingHorizontal="@dimen/padding_medium"
                            tools:text="Circle Head"
                            android:id="@+id/tvUserRole"
                            style="@style/CustomSmallDarkPrimaryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin"
                android:id="@+id/navigationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cardDetails">

                <!-- Site Card -->
                <androidx.cardview.widget.CardView
                    android:onClick="@{()->vm.onSitesClick()}"
                    android:id="@+id/cardSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/cardLightBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/cardLightStroke"
                    app:strokeWidth="@dimen/border_width_1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/card_dashboard_height"
                            android:layout_height="@dimen/card_dashboard_height"
                            android:padding="@dimen/padding"
                            app:cardBackgroundColor="#3B82F6"
                            app:cardCornerRadius="@dimen/card_radius_small"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="Site Icon"
                                android:src="@drawable/ic_marker_on_24"
                                app:tint="@android:color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/CustomLargeDarkTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin"
                            android:text="@string/site"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Approve Site Card -->
                <androidx.cardview.widget.CardView
                    android:onClick="@{()-> vm.onSitesApprovalsClick()}"
                    android:id="@+id/cardApproveSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/cardLightBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/cardLightStroke"
                    app:strokeWidth="@dimen/border_width_1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/card_dashboard_height"
                            android:layout_height="@dimen/card_dashboard_height"
                            app:cardBackgroundColor="#22C55E"
                            app:cardCornerRadius="@dimen/card_radius_small"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="Approve Site Icon"
                                android:src="@drawable/ic_check_circle_24"
                                app:tint="@android:color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/CustomLargeDarkTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin"
                            android:text="@string/approve_site"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Approve Claims Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardApproveClaims"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/cardLightBackground"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/cardLightStroke"
                    app:strokeWidth="@dimen/border_width_1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/card_dashboard_height"
                            android:layout_height="@dimen/card_dashboard_height"
                            app:cardBackgroundColor="#A855F7"
                            app:cardCornerRadius="@dimen/card_radius_small"
                            app:cardElevation="@dimen/elevation_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="Approve Claims Icon"
                                android:src="@drawable/ic_approve_claim_24"
                                app:tint="@android:color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/CustomLargeDarkTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin"
                            android:text="@string/approve_claims"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/margin"
                android:onClick="@{()->vm.onLogoutClick()}"
                android:id="@+id/cardLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/red_light"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/navigationContainer"
                app:strokeColor="@color/red_pastel"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Logout Icon"
                        android:src="@drawable/ic_logout_24"
                        app:tint="@color/red" />

                    <TextView
                        style="@style/CustomLargeDarkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:text="Logout"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>