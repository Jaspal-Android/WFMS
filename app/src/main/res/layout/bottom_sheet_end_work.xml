<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="locationString"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/end_work_with_details"
            style="@style/CustomLargeDarkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            style="@style/CustomMediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/work_location"
            android:textStyle="bold" />

        <TextView
            style="@style/CustomRegularDarkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_extra"
            android:text="@{locationString}"
            tools:text="4545,5454"></TextView>

        <TextView
            style="@style/CustomMediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/enter_remarks"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remarksEditText"
            style="@style/CustomEditRegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="top|start"
            android:hint="@string/enter_remarks"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:scrollbars="vertical" />

        <TextView
            style="@style/CustomMediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/select_status"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            tools:itemCount="5"
            tools:listitem="@layout/item_status"
            android:id="@+id/statusRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_done"
            style="@style/CustomPrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/done" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            style="@style/CustomRedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/cancel" />

    </LinearLayout>
</layout>